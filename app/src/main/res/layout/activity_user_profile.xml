<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.activities.profile.UserProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/AppTheme.NoActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:id="@+id/text_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/image_back"
                    android:gravity="center"
                    android:text="@string/tab_profile"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/textSaveProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="Save"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_20"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/colorWhite" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="628dp"
                    android:gravity="center"
                    android:text="Here for show map location"
                    android:textSize="@dimen/sp_20" />

            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_cover"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@color/colorBlack" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="90dp">

                    <!--image-->
                    <RelativeLayout
                        android:id="@+id/layout_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageProfile"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_user_holder" />

                        <ImageView
                            android:id="@+id/imageChangeProfile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignEnd="@+id/imageProfile"
                            android:layout_marginTop="70dp"
                            android:padding="@dimen/dp_5"
                            android:src="@drawable/ic_camera"
                            android:tint="@color/colorPrimary" />


                        <TextView
                            android:id="@+id/textName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageProfile"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/dp_8"
                            android:text="VICHIT POV"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_20" />

                        <TextView
                            android:id="@+id/textSold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/textName"
                            android:layout_alignStart="@+id/textName"
                            android:layout_below="@id/textName"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center"
                            android:text="@string/text_sold"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/textBought"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/textName"
                            android:layout_alignStart="@+id/textName"
                            android:layout_below="@id/textSold"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center"
                            android:text="@string/text_bought"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp_15" />


                    </RelativeLayout>
                    <!---->

                    <!--tab-->
                    <LinearLayout
                        android:id="@+id/layout_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_profile"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorHint" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <!--edit profile-->
                            <LinearLayout
                                android:id="@+id/linear_edit_profile"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="?android:selectableItemBackground"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:src="@drawable/ic_edit_profile"
                                    android:tint="@color/colorHint" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_5"
                                    android:gravity="center"
                                    android:text="@string/text_edit_profile"
                                    android:textSize="@dimen/sp_15" />


                            </LinearLayout>
                            <!---->

                            <!--sold-->
                            <LinearLayout
                                android:id="@+id/linear_sold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="?selectableItemBackground"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:src="@drawable/ic_sold"
                                    android:tint="@color/colorHint" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_5"
                                    android:gravity="center"
                                    android:text="Sold"
                                    android:textSize="@dimen/sp_15" />


                            </LinearLayout>
                            <!---->

                            <!--bought-->
                            <LinearLayout
                                android:id="@+id/linear_bought"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="?selectableItemBackground"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:src="@drawable/ic_bought"
                                    android:tint="@color/colorHint" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_5"
                                    android:gravity="center"
                                    android:text="Bought"
                                    android:textSize="@dimen/sp_15" />


                            </LinearLayout>
                            <!---->

                            <!--bought-->
                            <LinearLayout
                                android:id="@+id/linear_reload"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="?selectableItemBackground"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:src="@drawable/ic_reload"
                                    android:tint="@color/colorHint" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_5"
                                    android:gravity="center"
                                    android:text="Re Post"
                                    android:textSize="@dimen/sp_15" />


                            </LinearLayout>
                            <!---->

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorHint" />

                    </LinearLayout>
                    <!---->

                    <!--description-->
                    <TextView
                        android:id="@+id/textDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_tab"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15"
                        android:gravity="center"
                        android:lineSpacingExtra="3dp"
                        android:text="ហាងពួកយើងមានលក់ទូរស័ព្ទ នឹងសំភារះទូរស័ព្ទគ្រប់ប្រភេទ។ ជាពិសេសមានសេវាជុសជួលទូរស័ព្ទ។"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/text_edit_infor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textDescription"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/text_edit_infor"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_12" />
                    <!---->

                    <!--information-->
                    <RelativeLayout
                        android:id="@+id/layout_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_edit_infor"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/colorWhite">

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/icon_name"
                            android:background="@color/colorHint"
                            tools:ignore="UnknownId" />

                        <ImageView
                            android:id="@+id/icon_contact"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/view2"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/ic_contact"
                            android:tint="@color/colorHint"
                            tools:ignore="UnknownId" />

                        <View
                            android:id="@+id/view4"
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/view2"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_toEndOf="@+id/icon_contact"
                            android:background="@color/colorHint"
                            tools:ignore="UnknownId" />

                        <View
                            android:id="@+id/view5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/icon_contact"
                            android:background="@color/colorHint" />

                        <TextView
                            android:id="@+id/textPhone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/view3"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_toEndOf="@+id/view4"
                            android:gravity="center_vertical"
                            android:text="ទំនាក់ទំនង: 093 795 224"
                            android:textSize="@dimen/sp_15" />

                        <!---->
                        <ImageView
                            android:id="@+id/icon_email"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/view4"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:enabled="false"
                            android:src="@drawable/ic_email"
                            android:tint="@color/colorHint" />

                        <View
                            android:id="@+id/view6"
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/view4"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_toEndOf="@+id/icon_email"
                            android:background="@color/colorHint" />

                        <View
                            android:id="@+id/view7"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/icon_email"
                            android:background="@color/colorHint" />

                        <TextView
                            android:id="@+id/textEmail"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/view4"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_toEndOf="@+id/view4"
                            android:gravity="center_vertical"
                            android:text="អ៊ីម៉ែល: v.vichtpov@gmail.com"
                            android:textSize="@dimen/sp_15" />

                        <!---->

                        <ImageView
                            android:id="@+id/icon_address"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/view6"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/ic_location"
                            android:tint="@color/colorHint" />

                        <View
                            android:id="@+id/view8"
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/view6"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_toEndOf="@+id/icon_address"
                            android:background="@color/colorHint" />

                        <View
                            android:id="@+id/view9"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/icon_email"
                            android:background="@color/colorHint" />


                        <TextView
                            android:id="@+id/textAddress"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/view6"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_toEndOf="@+id/view4"
                            android:gravity="center_vertical"
                            android:text="អាសយដ្ឋាន: Phnom Penh"
                            android:textSize="@dimen/sp_15" />

                        <!---->

                        <View
                            android:id="@+id/view10"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/icon_address"
                            android:background="@color/colorHint" />

                    </RelativeLayout>
                    <!---->

                    <!--show map-->
                    <LinearLayout
                        android:id="@+id/linear_show_map"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@+id/layout_information"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/colorHint"
                        android:orientation="horizontal">


                    </LinearLayout>
                    <!---->

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
