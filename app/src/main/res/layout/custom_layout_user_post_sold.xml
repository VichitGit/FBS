<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageThumbnail"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_test" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorHint" />

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="I want the caller photo to be displayed full screen.displayed full screendisplayed full screendisplayed full screen "
                android:textColor="@color/colorHintIcon"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorHint" />


            <TextView
                android:id="@+id/textAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Address: Phnom Penh"
                android:textSize="10sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Price: 200$ - 350$"
                android:textColor="@color/colorRed"
                android:textSize="10sp"
                android:textStyle="normal|bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorHint" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/textEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:drawablePadding="-8dp"
                    android:drawableStart="@drawable/ic_edit"
                    android:drawableTint="@color/colorHint"
                    android:gravity="center"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingStart="-8dp"
                    android:text="Edit"
                    android:textColor="@color/colorBlack"
                    android:textSize="8sp"
                    android:textStyle="normal|bold"
                    tools:targetApi="m" />

                <TextView
                    android:id="@+id/textDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:drawablePadding="-8dp"
                    android:drawableStart="@drawable/ic_delete"
                    android:drawableTint="@color/colorHint"
                    android:gravity="center"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingStart="-8dp"
                    android:text="Delete"
                    android:textColor="@color/colorBlack"
                    android:textSize="8sp"
                    tools:ignore="UnusedAttribute" />

            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dp_10"
            android:background="@color/colorRed"
            android:gravity="right"
            android:padding="@dimen/dp_5"
            android:text="Available"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_10"
            tools:ignore="RtlHardcoded" />


    </android.support.v7.widget.CardView>

</LinearLayout>


