<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_5"
    android:layout_marginStart="@dimen/dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:background="?selectableItemBackground"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorHint" />

            <LinearLayout
                android:id="@+id/layoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:weightSum="5">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="I want the caller photo to be displayed full screen.I want the caller photo to be displayed full screen. "
                    android:textColor="@color/colorHintIcon"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@color/colorRed"
                    android:padding="@dimen/dp_5"
                    android:text="Available"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@id/layoutTitle"
                android:background="@color/colorHint" />


        </RelativeLayout>


        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Address: Phnom Penh"
            android:textSize="10sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Price: 200$ - 350$"
            android:textColor="@color/colorRed"
            android:textSize="10sp"
            android:textStyle="normal|bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorHint" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/text_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:drawablePadding="-8dp"
                android:drawableStart="@drawable/ic_edit"
                android:drawableTint="@color/colorHint"
                android:gravity="center"
                android:paddingEnd="@dimen/dp_8"
                android:paddingStart="-8dp"
                android:text="Edit"
                android:textColor="@color/colorBlack"
                android:textSize="8sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/text_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawablePadding="-8dp"
                android:drawableStart="@drawable/ic_delete"
                android:drawableTint="@color/colorHint"
                android:gravity="center"
                android:paddingEnd="@dimen/dp_8"
                android:paddingStart="-8dp"
                android:text="Delete"
                android:textColor="@color/colorBlack"
                android:textSize="8sp"
                tools:ignore="UnusedAttribute" />

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>

