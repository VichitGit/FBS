<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_5"
    android:layout_marginStart="@dimen/dp_5"
    android:background="@color/colorWhite"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:orientation="vertical"
            android:paddingEnd="@dimen/dp_5"
            android:paddingStart="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5">


            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="I want the caller photo to be displayed full screen. "
                android:textColor="@color/colorHintIcon"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorHint" />

            <TextView
                android:id="@+id/textAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Address: Phnom Penh"
                android:textSize="@dimen/sp_15"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_radius_right_red"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/dp_5"
                android:text="Price: 200$ - 350$"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_15"
                android:textStyle="normal|bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorHint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:weightSum="7">


                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_5"
                    android:text="11.2.2018"
                    android:textColor="@color/colorHint"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="normal|bold" />

                <ImageView
                    android:id="@+id/imageFavorite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/ic_favorite_selected"
                    android:tint="@color/colorHint" />

                <ImageView
                    android:id="@+id/imageNotification"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/ic_notification_selected" />


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
