<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageThumbnail"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="I want the caller photo to be displayed full screen.I want the caller photo to be displayed full screen.I want the caller photo to be displayed full screen. "
                    android:textColor="@color/colorHintIcon"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textPrice"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Address: Phnom Penh"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="200$ - 350$"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="normal" />

                <!--<ImageView-->
                    <!--android:id="@+id/imageMore"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:background="?selectableItemBackground"-->
                    <!--android:padding="@dimen/dp_5"-->
                    <!--android:scaleType="centerCrop"-->
                    <!--android:src="@drawable/ic_more_hoz"-->
                    <!--android:tint="@color/colorHint" />-->

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>