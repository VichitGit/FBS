<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        card_view:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_8">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_icon_category"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_fbs_launcher" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/view"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="IT Programmer"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/text_post_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_title"
                android:layout_toRightOf="@id/image_icon_category"
                android:gravity="center"
                android:text="150 Post"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:src="@drawable/ic_arrow"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/image_icon_category"
                android:layout_toEndOf="@+id/image_icon_category"
                android:background="@color/colorHint" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
