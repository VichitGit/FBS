<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="@dimen/dp_5"
    android:background="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ff0000"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/imageThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_no_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearTitle"
            android:background="@drawable/background_radius_right_red"
            android:padding="@dimen/dp_5"
            android:text="200$ - 300$"
            android:textColor="@color/colorWhite" />

        <LinearLayout
            android:id="@+id/linearTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/background_for_title_transparent"
            android:weightSum="6">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/line_space_3dp"
                android:maxLines="2"
                android:padding="@dimen/dp_10"
                android:text="I want to buy iphone 6 64g with power bank and price 300$ only."
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageFavorite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:src="@drawable/ic_favorite" />
        </LinearLayout>

    </RelativeLayout>


</FrameLayout>
