<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vichitpov.com.fbs.ui.activity.PostToBuyActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Post to buy"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_20" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="Product Detail"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_label_sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:background="@color/colorHint" />


                    <EditText
                        android:id="@+id/edit_title_sell"
                        style="@style/EditTextInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Product Title"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        tools:ignore="RtlSymmetry" />

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:hint="Choose Category"
                        app:ms_arrow_tint="@color/colorBlack"
                        app:ms_background_color="@color/colorWhite"
                        app:ms_background_selector="@drawable/background_spinner"
                        app:ms_text_color="@color/colorBlack" />

                    <EditText
                        android:id="@+id/edit_price_sell"
                        style="@style/EditTextInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:hint="Set Product Price"
                        android:inputType="numberDecimal"
                        android:textColor="@color/colorBlack"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@+id/edit_description_sell"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/background_layout"
                        android:gravity="top"
                        android:hint="Description"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:text="Contact"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size_label_sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorHint" />

                        <EditText
                            android:id="@+id/edit_name_sell"
                            style="@style/EditTextInputWithIcon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:drawableStart="@drawable/ic_account"
                            android:hint="Name"
                            tools:targetApi="m" />

                        <EditText
                            android:id="@+id/edit_contact_sell"
                            style="@style/EditTextInputWithIcon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:drawableStart="@drawable/ic_contact"
                            android:hint="Phone" />

                        <EditText
                            android:id="@+id/edit_email_sell"
                            style="@style/EditTextInputWithIcon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:drawableStart="@drawable/ic_email"
                            android:hint="Email"
                            tools:ignore="TextFields" />

                        <EditText
                            android:id="@+id/edit_location_sell"
                            style="@style/EditTextInputWithIcon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:drawableStart="@drawable/ic_location"
                            android:hint="Address" />

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/buttonSubmit"
                    style="@style/ButtonPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:text="Submit" />


            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
