<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vichitpov.com.fbs.ui.activities.EditProductBuyActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/AppTheme.NoActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:padding="@dimen/dp_15"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/text_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageBack"
                android:gravity="center"
                android:text="Edit Product"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_20" />

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:text="PRODUCT TITLE"
                android:textSize="@dimen/sp_12" />

            <EditText
                android:id="@+id/editTitle"
                style="@style/EditTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:hint="Product Title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:text="SELECT CATEGORY"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/textCategory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:text="Car and Vehicles  > Vehicles for Rent"
                    android:textSize="@dimen/sp_15"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/textChangeCategory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_10"
                    android:text="Change"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="SELECT PRICE START"
                        android:textSize="@dimen/sp_12" />

                    <EditText
                        android:id="@+id/editPriceFrom"
                        style="@style/EditTextInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorWhite"
                        android:hint="Price from"
                        android:inputType="number"
                        android:textColor="@color/colorBlack"
                        tools:ignore="RtlSymmetry" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="SELECT PRICE END"
                        android:textSize="@dimen/sp_12" />

                    <EditText
                        android:id="@+id/editPriceTo"
                        style="@style/EditTextInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorWhite"
                        android:hint="Price to"
                        android:inputType="number"
                        android:textColor="@color/colorBlack"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/background_layout_whilte"
                android:gravity="top"
                android:hint="Description"
                android:paddingStart="@dimen/dp_15"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_15"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="CONTACT"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorHint" />

                <EditText
                    android:id="@+id/editName"
                    style="@style/EditTextInputWithIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:drawableStart="@drawable/ic_account"
                    android:hint="Name"
                    tools:targetApi="m" />


                <EditText
                    android:id="@+id/editPhone"
                    style="@style/EditTextInputWithIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:drawableStart="@drawable/ic_contact"
                    android:hint="Phone" />


                <EditText
                    android:id="@+id/editEmail"
                    style="@style/EditTextInputWithIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:drawableStart="@drawable/ic_email"
                    android:hint="Email"
                    tools:ignore="TextFields" />


                <EditText
                    android:id="@+id/editAddress"
                    style="@style/EditTextInputWithIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:drawableStart="@drawable/ic_location"
                    android:hint="Address" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonUpload"
                style="@style/ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:text="Update" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
