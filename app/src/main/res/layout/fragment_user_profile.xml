<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vichitpov.com.fbs.ui.fragments.UserProfileFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Detail"
            android:textColor="@color/colorBlack" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="@dimen/dp_8">

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorHint" />

        <ImageView
            android:id="@+id/icon_name"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/ic_account"
            android:tint="@color/colorHint" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/icon_name"
            android:background="@color/colorHint" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/icon_name"
            android:background="@color/colorHint" />

        <EditText
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@+id/view2"
            android:background="@null"
            android:enabled="false"
            android:gravity="center_vertical"
            android:text="ឈ្មោះ: VICHIT POV"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/icon_contact"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/view2"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/ic_contact"
            android:tint="@color/colorHint" />

        <View
            android:id="@+id/view4"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_below="@+id/view2"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toRightOf="@+id/icon_contact"
            android:background="@color/colorHint" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/icon_contact"
            android:background="@color/colorHint" />

        <EditText
            android:id="@+id/text_contact"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/view3"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@+id/view4"
            android:background="@null"
            android:enabled="false"
            android:gravity="center_vertical"
            android:text="ទំនាក់ទំនង: 093 795 224"
            android:textSize="13sp" />

        <!---->
        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/view4"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:enabled="false"
            android:src="@drawable/ic_email"
            android:tint="@color/colorHint" />

        <View
            android:id="@+id/view6"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_below="@+id/view4"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/icon_email"
            android:background="@color/colorHint" />

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/icon_email"
            android:background="@color/colorHint" />

        <TextView
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/view4"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@+id/view4"
            android:enabled="false"
            android:gravity="center_vertical"
            android:text="អ៊ីម៉ែល: v.vichtpov@gmail.com"
            android:textSize="13sp" />

        <!---->

        <ImageView
            android:id="@+id/icon_address"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/view6"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/ic_location"
            android:tint="@color/colorHint" />

        <View
            android:id="@+id/view8"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_below="@+id/view6"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/icon_address"
            android:background="@color/colorHint" />

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/icon_email"
            android:background="@color/colorHint" />


        <TextView
            android:id="@+id/text_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/view6"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@+id/view4"
            android:background="@null"

            android:gravity="center_vertical"
            android:text="អាសយដ្ឋាន: Phnom Penh"
            android:textSize="13sp" />

        <!---->

        <View
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/icon_address"
            android:background="@color/colorHint" />

        <Button
            android:id="@+id/button_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorPrimary"
            android:text="កែប្រែ"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_15" />


    </RelativeLayout>

</LinearLayout>
